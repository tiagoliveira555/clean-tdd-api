    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "src",
    "target": "es2021",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}